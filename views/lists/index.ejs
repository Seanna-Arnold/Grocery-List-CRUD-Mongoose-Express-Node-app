<%- include('../partials/header') %>

<h2>Shopping List 🗒️</h2>
<table  class="listTable">
  <thead>
    <tr id="tableHead">
      <th>List Names</th>
      <th>Complete By</th>
      <th>Shop At</th>
      <th>Completed</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    <% lists.forEach(function(l) { %>
      <tr>
        <td><%= l.listName %></td>
        <td><%= new Date(l.dueDate).toLocaleDateString('en-US') %></td>
        <td><%= l.location %></td>
        <td><%= l.completed ? 'Yes' : 'Nope' %></td>
        <% if (user) { %>
        <td><a href="/lists/<%= l._id %>">view list</a></td>
        <td><form action="/lists/<%= l._id %>?_method=DELETE" method="POST"><button type="submit">X</button></form></td>
        <% } %>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
