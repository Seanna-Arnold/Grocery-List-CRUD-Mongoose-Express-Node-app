<%- include('../partials/header') %>

<h2>Shopping List ✏️ 🗒️</h2>
<table  class="listTable">
  <thead>
    <tr id="tableHead">
      <% if (user) { %>
      <th></th>
      <% } %>
      <th>List Names</th>
      <th>Complete By</th>
      <th>Shop At</th>
      <% if (user) { %>
      <th></th>
      <% } %>
    </tr>
  </thead>
  <tbody>

    <% lists.forEach(function(l) { %>
      <tr>
        <% if (user) { %>
        <td><a href="/lists/<%= l._id %>"> view list 👀</a></td>
        <% } %>
        <td><%= l.listName %></td>
        <td><%= new Date(l.dueDate).toLocaleDateString('en-US') %></td>
        <td><%= l.location %></td>
        <% if (user) { %>
        <td><form action="/lists/<%= l._id %>?_method=DELETE" method="POST" id="remove"><button type="submit">X</button></form></td>
        <% } %>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
