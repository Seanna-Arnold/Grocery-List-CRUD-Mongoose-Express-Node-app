<%- include('../partials/header') %>

<h2>Enter a New Item</h2>
<form action="/items" method="POST" action="/items/<%= item._id %>/add">
    <label>Item:
        <input type="text" name="itemName">
    </label>
    <label>Quantity:
        <input type="number" name="quantity">
    </label><br>
    <label>Category:
        <select name="category">
            <option value="Home">Home and Living</option>
            <option value="Food">Food</option>
            <option value="Living">Clothing</option>
        </select>
    </label><br><br>
    <button>Add</button>
    
</form>


